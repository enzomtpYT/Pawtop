{
    "name": "equibop",
    "version": "1.5.8",
    "private": true,
    "description": "Equibop is a custom Discord desktop app",
    "keywords": [],
    "homepage": "https://equicord.org",
    "license": "GPL-3.0-or-later",
    "author": "Equicord <contact@equicord.org>",
    "main": "dist/js/main.js",
    "scripts": {
        "build": "bun run scripts/build/build.mts",
        "build:dev": "bun run build --dev",
        "buildLibVesktop": "bun install --cwd packages/libvesktop && bun run --cwd packages/libvesktop build",
        "package": "bun run build && electron-builder",
        "package:dir": "bun run build && electron-builder --dir",
        "lint": "eslint",
        "lint:fix": "bun lint --fix",
        "start": "bun run build && electron .",
        "start:dev": "bun run build:dev && electron .",
        "start:watch": "bun run build:dev && bun run scripts/startWatch.mts",
        "test": "bun lint && bun testTypes",
        "testTypes": "tsc --noEmit",
        "watch": "bun run build --watch",
        "updateMeta": "bun run scripts/utils/updateMeta.mts",
        "updateArrpcDB": "node ./node_modules/arrpc/update_db.js",
        "applyPatches": "node scripts/applyPatches.mjs",
        "postinstall": "bun updateArrpcDB && bun applyPatches"
    },
    "dependencies": {
        "arrpc": "github:OpenAsar/arrpc#2234e9c9111f4c42ebcc3aa6a2215bfd979eef77",
        "electron-updater": "^6.6.2"
    },
    "optionalDependencies": {
        "@vencord/venmic": "^6.1.0"
    },
    "devDependencies": {
        "@equicord/types": "^1.13.3",
        "@fal-works/esbuild-plugin-global-externals": "^2.1.2",
        "@stylistic/eslint-plugin": "^5.4.0",
        "@types/node": "^24.7.0",
        "@types/react": "19.2.1",
        "dotenv": "^17.2.3",
        "electron": "^38.0.0",
        "electron-builder": "^26.0.12",
        "esbuild": "^0.25.10",
        "eslint": "^9.37.0",
        "eslint-import-resolver-alias": "^1.1.2",
        "eslint-plugin-path-alias": "^2.1.0",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-simple-header": "^1.2.2",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-unused-imports": "^4.2.0",
        "libvesktop": "link:packages/libvesktop",
        "prettier": "^3.6.2",
        "source-map-support": "^0.5.21",
        "type-fest": "^5.0.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.0",
        "xml-formatter": "^3.6.7"
    },
    "packageManager": "bun@latest",
    "engines": {
        "node": ">=18",
        "bun": ">=1.2.0"
    },
    "build": {
        "appId": "org.equicord.equibop",
        "productName": "Equibop",
        "executableName": "equibop",
        "files": [
            "!*",
            "!node_modules",
            "dist/js",
            "static",
            "package.json",
            "LICENSE"
        ],
        "protocols": {
            "name": "Discord",
            "schemes": [
                "discord"
            ]
        },
        "beforePack": "scripts/build/beforePack.mjs",
        "afterPack": "scripts/build/afterPack.mjs",
        "linux": {
            "icon": "build/icon.svg",
            "category": "Network",
            "maintainer": "contact@equicord.org",
            "target": [
                {
                    "target": "deb",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "tar.gz",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "rpm",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "AppImage",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ],
            "desktop": {
                "entry": {
                    "Name": "Equibop",
                    "GenericName": "Internet Messenger",
                    "Type": "Application",
                    "Categories": "Network;InstantMessaging;Chat;",
                    "Keywords": "discord;vencord;electron;chat;",
                    "MimeType": "x-scheme-handler/discord",
                    "StartupWMClass": "equibop"
                }
            }
        },
        "mac": {
            "target": [
                {
                    "target": "default",
                    "arch": [
                        "universal"
                    ]
                }
            ],
            "category": "public.app-category.social-networking",
            "darkModeSupport": true,
            "extendInfo": {
                "NSMicrophoneUsageDescription": "This app needs access to the microphone",
                "NSCameraUsageDescription": "This app needs access to the camera",
                "com.apple.security.device.audio-input": true,
                "com.apple.security.device.camera": true,
                "CFBundleIconName": "Icon"
            },
            "notarize": true
        },
        "dmg": {
            "background": "build/background.tiff",
            "icon": "build/icon.icns",
            "iconSize": 105,
            "window": {
                "width": 512,
                "height": 340
            },
            "contents": [
                {
                    "x": 140,
                    "y": 160
                },
                {
                    "x": 372,
                    "y": 160,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "nsis": {
            "include": "build/installer.nsh",
            "oneClick": false
        },
        "win": {
            "icon": "build/icon.ico",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ]
        },
        "publish": {
            "provider": "github"
        },
        "rpm": {
            "fpm": [
                "--rpm-rpmbuild-define=_build_id_links none"
            ]
        }
    },
    "trustedDependencies": [
        "@vencord/venmic",
        "electron",
        "esbuild"
    ]
}
